<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_bg"
    tools:context=".AdminSettings">

    <androidx.cardview.widget.CardView
        android:layout_width="363dp"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:onClick="addAlumni"
        app:cardBackgroundColor="#fffefe"
        app:cardCornerRadius="30dp"
        app:cardElevation="1dp"
        app:cardMaxElevation="1dp"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/add_up_card"
        app:layout_constraintVertical_bias="0.6">

        <ImageView
            android:layout_width="92dp"
            android:layout_height="98dp"
            android:layout_gravity="left"
            android:layout_margin="5dp"
            android:contentDescription="@string/app_name"
            android:paddingLeft="10dp"
            android:src="@drawable/database_add" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:layout_marginLeft="110dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="20dp"
            android:text="Add Alumni"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="110dp"
            android:layout_marginTop="55dp"
            android:layout_marginBottom="1dp"
            android:text="Add Alumni to Database"
            android:textColor="@color/black"
            android:textSize="16sp" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="363dp"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:onClick="addDept"
        app:cardBackgroundColor="#fffefe"
        app:cardCornerRadius="30dp"
        app:cardElevation="1dp"
        app:cardMaxElevation="1dp"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/add_up_card"
        app:layout_constraintVertical_bias="0.3">

        <ImageView
            android:layout_width="92dp"
            android:layout_height="98dp"
            android:layout_gravity="left"
            android:layout_margin="5dp"
            android:contentDescription="@string/app_name"
            android:paddingLeft="10dp"
            android:src="@drawable/database_add" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:layout_marginLeft="110dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="20dp"
            android:text="Add Department Faculty"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="214dp"
            android:layout_height="36dp"
            android:layout_marginLeft="110dp"
            android:layout_marginTop="55dp"
            android:layout_marginBottom="1dp"
            android:text="Add Department Faculty to Database"
            android:textColor="@color/black"
            android:textSize="16sp" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/add_up_card"
        android:layout_width="363dp"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:onClick="addupdata"
        app:cardBackgroundColor="#fffefe"
        app:cardCornerRadius="30dp"
        app:cardElevation="1dp"
        app:cardMaxElevation="1dp"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.071">

        <ImageView
            android:layout_width="92dp"
            android:layout_height="98dp"
            android:layout_gravity="left"
            android:layout_margin="5dp"
            android:contentDescription="@string/app_name"
            android:paddingLeft="10dp"
            android:src="@drawable/database_add" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:layout_marginLeft="110dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="20dp"
            android:text="Add Unplaced Student"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="110dp"
            android:layout_marginTop="55dp"
            android:layout_marginBottom="1dp"
            android:text="Add Unplaced Student to Database"
            android:textColor="@color/black"
            android:textSize="16sp" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="363dp"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:onClick="AddPlaced"
        app:cardBackgroundColor="#fffefe"
        app:cardCornerRadius="30dp"
        app:cardElevation="1dp"
        app:cardMaxElevation="1dp"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/add_up_card"
        app:layout_constraintVertical_bias="0.0">

        <ImageView
            android:layout_width="92dp"
            android:layout_height="98dp"
            android:layout_gravity="left"
            android:layout_margin="5dp"
            android:contentDescription="@string/app_name"
            android:paddingLeft="10dp"
            android:src="@drawable/database_add" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:layout_marginLeft="110dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="20dp"
            android:text="Add Placed Student"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="214dp"
            android:layout_height="40dp"
            android:layout_marginLeft="110dp"
            android:layout_marginTop="55dp"
            android:layout_marginBottom="1dp"
            android:text="Add Placed Student to Database"
            android:textColor="@color/black"
            android:textSize="16sp" />
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>