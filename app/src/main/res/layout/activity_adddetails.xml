<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gray_background"
    tools:context=".Adddetails">


    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="4dp"
        android:gravity="center"
        android:text="CTC:"
        android:textColor="#000000"
        android:textSize="19sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/ctc"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.543" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="288dp"
        android:layout_marginEnd="4dp"
        android:gravity="center"
        android:text="Role:"
        android:textColor="#000000"
        android:textSize="19sp"
        app:layout_constraintEnd_toStartOf="@+id/role"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="188dp"
        android:layout_marginEnd="4dp"
        android:gravity="right"
        android:text="Company:"
        android:textColor="#000000"
        android:textSize="19sp"
        app:layout_constraintEnd_toStartOf="@+id/cname"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="104dp"
        android:layout_marginEnd="4dp"
        android:gravity="right"
        android:text="Name:"
        android:textColor="#000000"
        android:textSize="20sp"
        app:layout_constraintEnd_toStartOf="@+id/stud_name"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/stud_name"
        android:layout_width="281dp"
        android:layout_height="62dp"
        android:layout_marginStart="92dp"
        android:background="@drawable/rounded_edittext"
        android:ems="10"
        android:foregroundGravity="center"
        android:gravity="center"
        android:hint="Student Name"
        android:inputType="textPersonName"
        android:textColorHint="#708090"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.13" />

    <EditText
        android:id="@+id/cname"
        android:layout_width="285dp"
        android:layout_height="62dp"
        android:layout_marginStart="92dp"
        android:background="@drawable/rounded_edittext"
        android:ems="10"
        android:foregroundGravity="center"
        android:gravity="center"
        android:hint="Company Name"
        android:inputType="textPersonName"
        android:textColorHint="#708090"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.254" />

    <EditText
        android:id="@+id/role"
        android:layout_width="285dp"
        android:layout_height="62dp"
        android:layout_marginStart="92dp"
        android:background="@drawable/rounded_edittext"
        android:ems="10"
        android:foregroundGravity="center"
        android:gravity="center"
        android:hint="Role"
        android:inputType="textPersonName"
        android:textColorHint="#708090"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.405" />

    <EditText
        android:id="@+id/ctc"
        android:layout_width="285dp"
        android:layout_height="62dp"
        android:layout_marginStart="92dp"
        android:background="@drawable/rounded_edittext"
        android:ems="10"
        android:foregroundGravity="center"
        android:gravity="center"
        android:hint="CTC in INR"
        android:inputType="phone"
        android:textColorHint="#708090"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.542" />

    <Button
        android:id="@+id/addata"
        android:layout_width="130dp"
        android:layout_height="52dp"
        android:layout_gravity="center"
        android:text="Add Data"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.54"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.858" />

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="124dp"
        android:layout_height="109dp"
        android:background="@drawable/cloud_computing"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.55"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.712" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:gravity="center_horizontal|center_vertical"
        android:text="Add Details"
        android:textColor="#000000"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.575"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>