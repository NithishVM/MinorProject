<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gray_background"
    tools:context=".Adddetails">


    <TextView
        android:layout_width="71dp"
        android:layout_height="50dp"
        android:layout_marginEnd="4dp"
        android:gravity="center"
        android:text="CTC:"
        android:textSize="19sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/ctc"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.533" />

    <TextView
        android:layout_width="73dp"
        android:layout_height="43dp"
        android:layout_marginTop="252dp"
        android:layout_marginEnd="4dp"
        android:gravity="center"
        android:text="Role:"
        android:textSize="19sp"
        app:layout_constraintEnd_toStartOf="@+id/role"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="93dp"
        android:layout_height="44dp"
        android:layout_marginTop="168dp"
        android:layout_marginEnd="4dp"
        android:gravity="right"
        android:text="Company:"
        android:textSize="19sp"
        app:layout_constraintEnd_toStartOf="@+id/cname"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="87dp"
        android:layout_height="50dp"
        android:layout_marginTop="84dp"
        android:layout_marginEnd="8dp"
        android:gravity="right"
        android:text="Name:"
        android:textSize="20sp"
        app:layout_constraintEnd_toStartOf="@+id/stud_name"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/stud_name"
        android:layout_width="285dp"
        android:layout_height="62dp"
        android:layout_marginStart="92dp"
        android:background="@drawable/rounded_edittext"
        android:ems="10"
        android:foregroundGravity="center"
        android:gravity="center"
        android:hint="Student Name"
        android:text="David Lane"
        android:inputType="textPersonName"
        android:textColorHint="#708090"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.125" />

    <EditText
        android:id="@+id/cname"
        android:layout_width="285dp"
        android:layout_height="62dp"
        android:layout_marginStart="92dp"
        android:background="@drawable/rounded_edittext"
        android:ems="10"
        android:foregroundGravity="center"
        android:gravity="center"
        android:text="JP Morgan Chase"
        android:hint="Company Name"
        android:inputType="textPersonName"
        android:textColorHint="#708090"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.254" />

    <EditText
        android:id="@+id/role"
        android:layout_width="285dp"
        android:layout_height="62dp"
        android:layout_marginStart="92dp"
        android:background="@drawable/rounded_edittext"
        android:ems="10"
        android:foregroundGravity="center"
        android:gravity="center"
        android:hint="Role"
        android:text="Analyst"
        android:inputType="textPersonName"
        android:textColorHint="#708090"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.405" />

    <EditText
        android:id="@+id/ctc"
        android:layout_width="285dp"
        android:layout_height="62dp"
        android:layout_marginStart="92dp"
        android:background="@drawable/rounded_edittext"
        android:ems="10"
        android:foregroundGravity="center"
        android:gravity="center"
        android:hint="CTC in INR"
        android:text="4,00,000"
        android:inputType="textPersonName"
        android:textColorHint="#708090"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.542" />

    <Button
        android:id="@+id/addata"
        android:layout_width="130dp"
        android:layout_height="52dp"
        android:layout_gravity="center"
        android:text="Add Data"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.54"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.858" />

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="124dp"
        android:layout_height="109dp"
        android:background="@drawable/cloud_computing"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.55"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.712" />

</androidx.constraintlayout.widget.ConstraintLayout>