<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gray_background"
    tools:context=".Vieweach">

    <TextView
        android:layout_width="95dp"
        android:layout_height="39dp"
        android:layout_marginTop="280dp"
        android:layout_marginEnd="52dp"
        android:text="CTC:"
        android:textSize="20sp"
        app:layout_constraintEnd_toStartOf="@+id/datatext3"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="89dp"
        android:layout_height="39dp"
        android:layout_marginTop="360dp"
        android:layout_marginEnd="60dp"
        android:text="Role:"
        android:textSize="20sp"
        app:layout_constraintEnd_toStartOf="@+id/datatext4"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="95dp"
        android:layout_height="48dp"
        android:layout_marginTop="212dp"
        android:layout_marginEnd="52dp"
        android:text="Company:"
        android:textSize="20sp"
        app:layout_constraintEnd_toStartOf="@+id/datatext2"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:layout_width="254dp"
        android:layout_height="44dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="76dp"
        android:gravity="left"
        android:text="Student Details"
        android:textColor="@color/black"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/datatext"
        android:layout_width="225dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="148dp"
        android:layout_marginEnd="4dp"
        android:gravity="left"
        android:text="TextView"
        android:textColor="#221515"
        android:textSize="28sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/datatext2"
        android:layout_width="225dp"
        android:layout_height="49dp"
        android:layout_marginTop="212dp"
        android:layout_marginEnd="4dp"
        android:gravity="left"
        android:text="TextView"
        android:textColor="#131111"
        android:textSize="28sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/datatext3"
        android:layout_width="225dp"
        android:layout_height="49dp"
        android:layout_marginTop="280dp"
        android:layout_marginEnd="4dp"
        android:gravity="left
"
        android:text="TextView"
        android:textColor="#332B2B"
        android:textSize="28sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/datatext4"
        android:layout_width="225dp"
        android:layout_height="49dp"
        android:layout_marginTop="352dp"
        android:layout_marginEnd="4dp"
        android:clickable="true"
        android:gravity="left"
        android:text="TextView"
        android:textColor="#131010"
        android:textSize="28sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="444dp"
        android:layout_marginEnd="104dp"
        android:text="View Experience PDF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="87dp"
        android:layout_height="50dp"
        android:layout_marginTop="144dp"
        android:layout_marginEnd="60dp"
        android:text="Name:"
        android:textSize="20sp"
        app:layout_constraintEnd_toStartOf="@+id/datatext"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>